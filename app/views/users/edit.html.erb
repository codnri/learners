<div class="page-title">Edit Profile: <%= @user.full_name %></div>

  <br>    
        <div class="col-md-6 col-md-offset-3">
    
        
  <%= form_for(@user) do |f| %>
    <%= render 'error_messages' %>
    
    <div class="form-group">
    <%= f.label :firstname %>
    <%= f.text_field :firstname %>
    </div>
    <br>
    <div class="form-group">
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>
    </div>
    <br>
    <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
    </div>
    <br>

    <%= f.submit "Update", class: "btn btn-primary" %>
  
  <% end %>

</div>