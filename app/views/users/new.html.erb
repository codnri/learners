<h1>Users#new</h1>
<%= form_for(@user) do |f| %>
  <%= render 'error_messages' %>
  <%= f.label :firstname %>
  <%= f.text_field :firstname %>
  <br>
  <%= f.label :lastname %>
  <%= f.text_field :lastname %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :admin %>
  <%= f.check_box :admin %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>  
  <%= f.submit "Sign Up", class: "btn btn-primary" %>

<% end %>